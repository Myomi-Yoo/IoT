package oop.chap06;
//메소드 정의하는 연습을 위한 클래스
public class MyMethod {
	//3. 리턴 값이 없고 매개변수가 두 개인 메소드
	//   => 출력기호, 출력할 횟수를 매개변수로 전달 받아 사용할 수 있도록 메소드를 정의하고,
	//      MyMethodTest.java에서 호출해서 테스트하기
	public void display(int j, String str) {
		for(int i=1;i<=j;i++) {
			System.out.print(str);
		}
		System.out.println();
	}
	//2. 리턴 값이 없고 매개변수가 한 개인 메소드
	public void display(String str) {
		for(int i=1;i<=10;i++) {
			System.out.print(str);
		}
		System.out.println();
	}
	//1. 매개변수가 없고 리턴값이 없는 메소드
	public void display() {
		for(int i=1;i<=10;i++) {
			System.out.print("*");
		}
		System.out.println();
	}
}
